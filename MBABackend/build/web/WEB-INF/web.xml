<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginChecker</servlet-name>
        <servlet-class>com.mba.user.login.LoginChecker</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemCategoryGetter</servlet-name>
        <servlet-class>com.mba.user.http.Item.ItemCategoryGetter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemListGetter</servlet-name>
        <servlet-class>com.mba.user.http.Item.ItemListGetter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainHandlerServlet</servlet-name>
        <servlet-class>com.mba.user.main.MainHandlerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderListGetter</servlet-name>
        <servlet-class>com.mba.user.transaction.OrderListGetter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.mba.html.user.login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.mba.html.user.login.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NameChange</servlet-name>
        <servlet-class>com.mba.html.user.updater.NameUpdateHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddressChange</servlet-name>
        <servlet-class>com.mba.html.user.updater.AddressUpdateHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactChange</servlet-name>
        <servlet-class>com.mba.html.user.updater.ContactUpdateHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordChange</servlet-name>
        <servlet-class>com.mba.html.user.updater.PasswordUpdateHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartItemAdd</servlet-name>
        <servlet-class>com.mba.html.user.transaction.CartItemAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartItemDelete</servlet-name>
        <servlet-class>com.mba.html.user.transaction.CartItemDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartSend</servlet-name>
        <servlet-class>com.mba.html.user.transaction.CartSend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelpRequest</servlet-name>
        <servlet-class>com.mba.html.user.help.HelpRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartItemEdit</servlet-name>
        <servlet-class>com.mba.html.user.transaction.CartItemEdit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartDeleteHtml</servlet-name>
        <servlet-class>com.mba.html.user.transaction.CartDeleteHtml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginChecker</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemCategoryGetter</servlet-name>
        <url-pattern>/ItemCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemListGetter</servlet-name>
        <url-pattern>/ItemList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainHandlerServlet</servlet-name>
        <url-pattern>/MainHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/htmllogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/htmllogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderListGetter</servlet-name>
        <url-pattern>/OrderList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NameChange</servlet-name>
        <url-pattern>/htmlnameupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddressChange</servlet-name>
        <url-pattern>/htmladdressupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactChange</servlet-name>
        <url-pattern>/htmlcontactupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordChange</servlet-name>
        <url-pattern>/htmlpasswordupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartItemAdd</servlet-name>
        <url-pattern>/htmladdtocart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartItemDelete</servlet-name>
        <url-pattern>/htmldeleteitem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartSend</servlet-name>
        <url-pattern>/htmlcartsend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelpRequest</servlet-name>
        <url-pattern>/htmlhelp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartItemEdit</servlet-name>
        <url-pattern>/htmledititem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartDeleteHtml</servlet-name>
        <url-pattern>/htmlcartdelete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/User/Login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
